            <ImageView
                android:layout_width="@dimen/colorIconSize"
                android:layout_height="@dimen/colorIconSize"
                android:src="@drawable/color_icon_darkergray"
                android:id="@+id/color_send_txt_5"
                android:padding="1dp"/>
            <ImageView
                android:layout_width="@dimen/colorIconSize"
                android:layout_height="@dimen/colorIconSize"
                android:src="@drawable/color_icon_lightyellow"
                android:id="@+id/color_send_txt_6"
                android:padding="1dp"/>
            <ImageView
                android:layout_width="@dimen/colorIconSize"
                android:layout_height="@dimen/colorIconSize"
                android:src="@drawable/color_icon_lightgreen"
                android:id="@+id/color_send_txt_7"
                android:padding="1dp"/>
            <ImageView
                android:layout_width="@dimen/colorIconSize"
                android:layout_height="@dimen/colorIconSize"
                android:src="@drawable/color_icon_orange"
                android:id="@+id/color_send_txt_8"
                android:padding="1dp"/>
            <ImageView
                android:layout_width="@dimen/colorIconSize"
                android:layout_height="@dimen/colorIconSize"
                android:src="@drawable/color_icon_black"
                android:id="@+id/color_send_txt_9"
                android:padding="1dp"/>
