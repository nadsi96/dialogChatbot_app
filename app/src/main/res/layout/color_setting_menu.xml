                android:layout_width="@dimen/colorIconSize"
                android:layout_height="@dimen/colorIconSize"
                android:src="@drawable/color_icon_white"
                android:id="@+id/color_send_txt_10"
                android:padding="1dp"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="받는 말풍선"
        android:textSize="14sp"
        android:layout_marginVertical="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="말풍선 색"
        android:textSize="12sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        >
        <ImageView
            android:layout_width="@dimen/colorIconSize"
            android:layout_height="@dimen/colorIconSize"
            android:src="@drawable/color_icon_colorprimary"
            android:id="@+id/color_receive_bg_1"
            android:padding="1dp"/>
        <ImageView
            android:layout_width="@dimen/colorIconSize"
