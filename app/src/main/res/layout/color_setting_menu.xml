            android:layout_width="@dimen/colorIconSize"
            android:layout_height="@dimen/colorIconSize"
            android:src="@drawable/color_icon_black"
            android:id="@+id/color_receive_bg_9"
            android:padding="1dp"/>
        <ImageView
            android:layout_width="@dimen/colorIconSize"
            android:layout_height="@dimen/colorIconSize"
            android:src="@drawable/color_icon_white"
            android:id="@+id/color_receive_bg_10"
            android:padding="1dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="글자색"
        android:textSize="12sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        >
        <ImageView
            android:layout_width="@dimen/colorIconSize"
            android:layout_height="@dimen/colorIconSize"
            android:src="@drawable/color_icon_colorprimary"
            android:id="@+id/color_receive_txt_1"
            android:padding="1dp"/>
        <ImageView
            android:layout_width="@dimen/colorIconSize"
            android:layout_height="@dimen/colorIconSize"
            android:src="@drawable/color_icon_colorprimarydark"
            android:id="@+id/color_receive_txt_2"
            android:padding="1dp"/>
        <ImageView
            android:layout_width="@dimen/colorIconSize"
            android:layout_height="@dimen/colorIconSize"
